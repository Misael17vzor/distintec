<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="assign_invoice_to_so_and_po_view_form" model="ir.ui.view">
        <field name="name">assign.invoice.to.so.view.form</field>
        <field name="model">assign.invoice.to.so.and.po.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <field name="invoice_ids"/>
                    <label for ="is_unlink" string="Desvincular facturas seleccionadas"/>
                    <field name="is_unlink" />
                <footer>
                    <button name="assign_invoice_confirm" string="Confirmar" type="object" class="oe_highlight" />
                    <button string="Cancelar" class="btn btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>